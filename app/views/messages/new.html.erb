<% provide(:title, "New Message") %>
<h1>New Message</h1>
<%= form_for :message, url: messages_path do |f| %>
  <%= render 'shared/error_messages', object: @message %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :message_text %><br>
    <%= f.text_area :message_text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
